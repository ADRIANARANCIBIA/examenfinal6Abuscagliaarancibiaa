    const defaultConfig = {
      site_title: "EcoVerde",
      hero_title: "Protegiendo Nuestro Planeta",
      hero_subtitle: "Juntos por un futuro sostenible y un medio ambiente saludable",
      about_title: "Nuestra Misi√≥n",
